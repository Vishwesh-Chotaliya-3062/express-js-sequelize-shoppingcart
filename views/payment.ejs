<head>
    <%- include('./include/header.link.ejs') %>
    <title>Payment</title>
    <link rel="stylesheet" href="/css/orderdetails.css">
    <link href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'>
    <link href='https://use.fontawesome.com/releases/v5.7.2/css/all.css'>
</head>

<body style="background-color: #eee">

    <section id="nav-header" style="height: 100px;">
        <header>
            <nav class="navbar navbar-expand-md fixed-top white-nav">
                <div class="container">
                    <div class="img-logo">
                        <img src="/images/logo.png" class="img-fluid" alt="">
                    </div>

                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" style="margin-left: auto; float: right;"
                        id="navbarSupportedContent">
                        <ul class="navbar-nav" style="margin-left: auto;">
                            <li class="nav-item">
                                <a class="nav-link purple-link" href="/welcome">HOME</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link purple-link" href="/wallet">WALLET( $<b style="color: #6255a6;">
                                        <%= walletBalance %>
                                    </b>)</a>
                            </li>

                            <% if(!cartCount) { %>
                                <li class="nav-item">
                                    <a class="nav-link purple-link" href="/cart" style="color: #6255a5;">CART</a>
                                </li>

                                <% } else{ %>
                                    <li class="nav-item">
                                        <a class="nav-link purple-link" href="/cart" style="color: #6255a5;">CART(<b
                                                style="color: #6255a6;">
                                                <%= cartCount %>
                                            </b>)</a>
                                    </li>
                                    <% } %>

                                        <% if(!countCouponcode) { %>
                                            <li class="nav-item">
                                                <a class="nav-link purple-link" href="/couponcode">COUPON
                                                    CODE</a>
                                            </li>

                                            <% } else{ %>
                                                <li class="nav-item">
                                                    <a class="nav-link purple-link" href="/couponcode">COUPON
                                                        CODE (<b style="color: #6255a6;">
                                                            <%= countCouponcode %>
                                                        </b>)</a>
                                                </li>
                                                <% } %>
                                                    <li class="nav-item">
                                                        <a class="nav-link purple-link" href="/history">
                                                            MY ORDERS
                                                        </a>
                                                    </li>
                                                    <% for(let user in userDetails) { %>
                                                        <% if(userDetails[user].Status=='pending' ) { %>
                                                            <li class="nav-item">
                                                                <a id="nav-btn" style="width: 150px;"
                                                                    class="nav-link btn btn-login-navbar-purple white-link d-flex align-items-center"
                                                                    href="<%= link %>" role="button">VERIFY EMAIL</a>
                                                            </li>
                                                            <% } %>
                                                                <% } %>
                                                                    <li class="nav-item">
                                                                        <div class="dropdown">
                                                                            <% if(ab) { %>
                                                                                <a style="cursor: pointer;"
                                                                                    class="nav-link purple-link pro-pic"
                                                                                    data-toggle="dropdown"
                                                                                    aria-haspopup="true"
                                                                                    aria-expanded="false">
                                                                                    <img src="/images/upload_images/<%= ab.Image %>"
                                                                                        style="width: 40px; height: 50px; border-radius: 50%;"
                                                                                        alt="">
                                                                                </a>
                                                                                <% } %>
                                                                                    <% if(!ab) { %>
                                                                                        <a style="cursor: pointer;"
                                                                                            class="nav-link purple-link pro-pic"
                                                                                            data-toggle="dropdown"
                                                                                            aria-haspopup="true"
                                                                                            aria-expanded="false">
                                                                                            <img src="/images/default-profile-picture1.jpg"
                                                                                                style="width: 40px; height: 50px; border-radius: 50%;"
                                                                                                alt="">
                                                                                        </a>
                                                                                        <% } %>
                                                                                            <div class="dropdown-menu"
                                                                                                aria-labelledby="dropdownMenuButton">
                                                                                                <a class="dropdown-item"
                                                                                                    href="/userprofile">Update
                                                                                                    Profile</a>
                                                                                                <a class="dropdown-item"
                                                                                                    href="/changepassword">Change
                                                                                                    Password</a>
                                                                                                <a class="dropdown-item"
                                                                                                    href="/logout"
                                                                                                    style="color: #6255a5;">LOGOUT</a>
                                                                                            </div>
                                                                        </div>
                                                                    </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </section>

    <section id="login">
        <header style="margin-bottom: 50px;">
            <div class="d-flex justify-content-center align-items-center pb-3">

                <div class="px-sm-5 px-2">CHECKOUT</div>
                <div class="px-sm-5 px-2 active" style="color: #6255a5;">PAYMENT <span class="fas fa-check"></span>
                </div>
                <div class="px-sm-5 px-2">FINISH</div>
            </div>
            <div class="progress" style="width: 50%; margin-left: 380px;">
                <div class="progress-bar bg-success" role="progressbar" style="width:400px" aria-valuenow="25"
                    aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </header>
        <div id="login-content" style="margin-top: 80px;">
            <div id="logo">
                <img src="images/pre-login/top-logo.png" class="img-fluid" alt="" style="margin-top: -20px;">
            </div>

            <div class="container-cust" id="login-form" style="margin-bottom: 0px; margin-top: -30px;">

                <div id="login-heading" style="margin-top:-20px;">
                    <p>Payment Details</p>
                </div>

                <div id="login-text-1" style="margin-top:30px">
                    <p>We only allow users to pay with their "Shopping Cart Wallet".</p>
                </div>
                <div id="login-text-1" style="margin-top: -35px; margin-left: -5px;">
                    <p>The Purchase Amount will be automatically withdrawn from</p>
                </div>
                <div id="login-text-1" style="margin-top: -40px;">
                    <p>your wallet.</p>
                </div>
                <div class="d-flex align-items-center py-2" style="margin-top: 10px;">
                    <div class="display-5" style="margin-left: 75px;">Purchase Amount</div>
                    <div class="ml-auto d-flex" style="margin-right: 80px;">
                        <div style="color: #6255a5; "><b>USD</b>&nbsp;&nbsp;</div>
                        <div class="font-weight-bold">$<%= Data.PurchaseTotal %>
                        </div>
                    </div>
                </div>
                <div style="margin-top: 5px; ">
                    <div class="d-flex align-items-center py-2 border-bottom"
                        style="margin-top: -8px; width: 425px; margin-left: 75px;"></div>
                    <div class="d-flex align-items-center py-2" style="margin-top: 10px;">
                        <div class="display-5" style="margin-left: 75px;">Wallet Balance</div>
                        <div class="ml-auto d-flex" style="margin-right: 80px;">
                            <div style="color: #6255a5;"><b>USD</b>&nbsp;&nbsp;</div>
                            <div class="font-weight-bold">$<%= walletBalance %>.00</div>
                        </div>
                    </div>
                    <% if(walletBalance>= Data.PurchaseTotal) { %>
                        <div id="login-text-1" style="margin-top:30px">
                            <p style="color: green; margin-bottom: 70px; margin-top: 20px;">$<%= Data.PurchaseTotal %>
                                    will be automatically withdrawn from your wallet.</p>
                        </div>
                        <form action="/<%= orderId %>/status" method="GET">
                            <div class="row pt-lg-3 pt-2 buttons mb-sm-0 mb-2"
                                style="margin-top: 10px; margin-left: 100px;">
                                <a href="/welcome" style="color: #6255a5; margin-top: -40px;">BACK TO SHOPPING</a>
                                <button type="submit" class="btn btn-login" id="submit" value="Sign Up"
                                    style="height: 50px; margin-left: 60px; border-radius: 0px; width: 34%; margin-top: -50px; margin-bottom: 40px;"
                                    data-toggle="modal">PLACE ORDER</button>
                            </div>
                        </form>
                        <% } else { %>
                            <p style="margin-left: 75px; color: red; margin-top: 20px; margin-bottom: 70px;">You need
                                to add $<%= sufficientBalance %> in your wallet to confirm your order.</p>
                            <div class="row pt-lg-3 pt-2 buttons mb-sm-0 mb-2"
                                style="margin-top: 10px; margin-left: 131px;">
                                <a href="/welcome" style="color: #6255a5; margin-top: -40px;">BACK TO SHOPPING</a>
                                <a href="/wallet"
                                    style="color: #6255a5; margin-left: 60px; margin-top: -40px; margin-bottom: 40px;">ADD
                                    AMOUNT</a>
                            </div>
                            <% } %>
                </div>

            </div>
        </div>

    </section>
    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
    <%- include('./include/footer.ejs') %>

    <%- include('./include/script.link.ejs') %>

</body>