<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">
    <link rel="shortcut icon" href="/images/favicon.ico">
    <title>Login</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/responsive.css">
</head>

<body>
    <section id="login">
        <img src="images/pre-login/banner-with-overlay.jpg" id="login-bg-img" alt="">

        <div id="login-content">
            <div id="logo">
                <img src="images/pre-login/top-logo.png" class="img-fluid" alt="" style="margin-top: -20px;">
            </div>

            <div id="forgot-pw-text-1" style="margin-top: 20px;">
                <p style="color: #47cf48;"><img src="/images/Artboard 1.png"
                        style="width: 15px; height: 15px; transform: translateY(-2px);" alt=""> Your account has been
                    successfully created.</p>
            </div>
            <div class="container-cust" id="login-form" style="margin-bottom: 0px; margin-top: -30px;">


                <div id="login-heading" style="margin-top:-20px;">
                    <p>Verify Account</p>
                </div>

                <div id="login-text-1">
                    <p>Verify account using OTP sent to your email address</p>
                </div>
                <div id="login-text-1" style="margin-top: -40px;">
                    <p>and get 500 rupees.</p>
                </div>
                <form action="/verify" method="post" name="Form">
                    <div class="form-group ip-text" style="margin-top: -10px;">
                        <div class="input-auth">
                            <input type="text" class="form-control input-field" hidden="true" name="UserID" id="UserID"
                                value="<%= UserID %>">
                        </div>
                    </div>

                    <div class="form-group ip-text">
                        <div class="input-auth">
                            <label for="secretcode">OTP</label>
                            <input type="text" class="form-control input-field" name="secretcode" id="secretcode"
                                placeholder="Enter OTP" required>
                        </div>
                    </div>

                    <div id="login-btn" style="margin-bottom: 40px; margin-top: 30px;">
                        <button type="submit" class="btn btn-login" id="submit" value="Sign Up"
                            data-toggle="modal">VERIFY</button>
                    </div>
                </form>
            </div>
        </div>

    </section>

    <script src="js/jquery-3.5.1.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/script.js"></script>
</body>