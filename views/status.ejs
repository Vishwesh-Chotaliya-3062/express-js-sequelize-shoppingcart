                            <a href="/welcome" style="color: #6255a5; margin-right: 70px;">BACK TO SHOPPING</a>
                            <a href="/<%= orderId %>/payment"
                                style="margin-top: 0px; color: #6255a5; margin-right: 70px;">RETRY</a>
