<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">
    <link rel="shortcut icon" href="/images/favicon.ico">
    <title>Status</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/responsive.css">
</head>

<body>

    <section id="nav-header" style="height: 100px;">
        <img src="images/pre-login/banner-with-overlay.jpg" id="login-bg-img" alt="">

        <header>
            <nav class="navbar navbar-expand-md fixed-top white-nav">
                <div class="container">
                    <div class="img-logo">
                            <img src="/images/logo.png" class="img-fluid" alt="">
                    </div>

                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" style="margin-left: auto; float: right;"
                        id="navbarSupportedContent">
                        <ul class="navbar-nav" style="margin-left: auto;">
                            <% for(let user in userDetails) { %>
                                <li class="nav-item">
                                    <a class="nav-link purple-link">Welcome <b style="color: #6255a6;">&nbsp;<%=
                                                userDetails[user].UserName %>!</b></a>
                                </li>
                                <% } %>
                                    <li class="nav-item">
                                        <a class="nav-link purple-link" href="/welcome">HOME</a>
                                    </li>

                                    <li class="nav-item">
                                        <a class="nav-link purple-link" href="/wallet">WALLET( $<b style="color: #6255a6;"><%= walletBalance %>
                                            </b>)</a>
                                    </li>

                                    <% if(!cartCount) { %>
                                        <li class="nav-item">
                                            <a class="nav-link purple-link" href="/cart">CART</a>
                                        </li>

                                        <% } else{ %>
                                            <li class="nav-item">
                                                <a class="nav-link purple-link" href="/cart">CART(<b
                                                        style="color: #6255a6;">
                                                        <%= cartCount %>
                                                    </b>)</a>
                                            </li>
                                            <% } %>

                                                <% if(!countCouponcode) { %>
                                                    <li class="nav-item">
                                                        <a class="nav-link purple-link" href="/couponcode">COUPON
                                                            CODE</a>
                                                    </li>

                                                    <% } else{ %>
                                                        <li class="nav-item">
                                                            <a class="nav-link purple-link" href="/couponcode">COUPON
                                                                CODE (<b style="color: #6255a6;">
                                                                    <%= countCouponcode %>
                                                                </b>)</a>
                                                        </li>
                                                        <% } %>

                                                            <% for(let user in userDetails) { %>
                                                                <% if(userDetails[user].Status=='pending' ) { %>
                                                                    <li class="nav-item">
                                                                        <a id="nav-btn" style="width: 150px;"
                                                                            class="nav-link btn btn-login-navbar-purple white-link d-flex align-items-center"
                                                                            href="<%= link %>" role="button">VERIFY
                                                                            EMAIL</a>
                                                                    </li>
                                                                    <% } %>
                                                                        <% } %>
                                                                            <li class="nav-item">
                                                                                <a id="nav-btn"
                                                                                    class="nav-link btn btn-login-navbar-purple white-link d-flex align-items-center"
                                                                                    href="#">LOGOUT</a>
                                                                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </section>

    <section id="login">

        <div id="login-content" style="margin-top: 50px;">
            <div id="logo">
                <img src="images/pre-login/top-logo.png" class="img-fluid" alt="" style="margin-top: -20px;">
            </div>

            <div class="container-cust" id="login-form" style="margin-bottom: 0px; margin-top: -30px;">

                <div id="login-heading" style="margin-top:-20px;">
                    <p>Payment Details</p>
                </div>
                <div id="login-text-1" style="margin-top:30px">
                    <p>We only allow users to pay with their "Shopping Cart Wallet".</p>
                </div>
                <div id="login-text-1" style="margin-top: -35px; margin-left: -5px;">
                    <p>The Purchase Amount will be automatically withdrawn from</p>
                </div>
                <div id="login-text-1" style="margin-top: -40px;">
                    <p>your wallet.</p>
                </div>
                <div id="login-text-1" style="margin-top: 10px;">
                    <p><%= Data1.Status %></p>
                </div>
            </div>
        </div>

    </section>
