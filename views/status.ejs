<head>
    <%- include('./include/header.link.ejs') %>
        <title>Status</title>
        <link rel="stylesheet" href="/css/orderdetails.css">

</head>

<body style="background-color: #eee;">

    <%- include('./include/header.ejs') %>

    <section id="login">
        <header style="margin-bottom: 50px;">
            <div class="d-flex justify-content-center align-items-center pb-3">

                <div class="px-sm-5 px-2">CHECKOUT</div>
                <div class="px-sm-5 px-2">PAYMENT</div>
                <% if(Data1.Status=="failed" ) { %>
                    <div class="px-sm-5 px-2 active" style="color: #6255a5;">FAILURE <span class="fas fa-check"></span>
                    </div>
                    <% } else { %>
                        <div class="px-sm-5 px-2 active" style="color: #6255a5;">FINISH <span
                                class="fas fa-check"></span>
                        </div>
                        <% } %>
            </div>
            <div class="progress" style="width: 50%; margin-left: 380px;">
                <div class="progress-bar bg-success" role="progressbar" style="width:550px" aria-valuenow="25"
                    aria-valuemin="0" aria-valuemax="100"></div>
            </div>
        </header>

        <div id="login-content" style="margin-top: 130px;">

            <% if(Data1.Status=="success" ) { %>

                <div class="container-cust" id="login-form"
                    style="margin-bottom: 0px; margin-top: -30px; margin-bottom: 10px;">

                    <div style="margin-left: 260px; margin-top: 30px;">
                        <img src="/images/SUCCESS.png" style="height: 60px; width: 60px;">
                    </div>
                    <div id="login-heading" style="margin-top:-40px;">
                        <p>Thanks For Your Order!</p>
                    </div>

                    <table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin-top: -30px;">
                        <tr>
                            <td align="center" style="background-color: #eeeeee;" bgcolor="#eeeeee">
                                <table align="center" border="0" cellpadding="0" cellspacing="0" width="100%"
                                    style="max-width:600px;">
                                    <tr>
                                        <td align="center"
                                            style="padding: 35px 35px 20px 35px; background-color: #ffffff;"
                                            bgcolor="#ffffff">
                                            <table align="center" border="0" cellpadding="0" cellspacing="0"
                                                width="100%" style="max-width:600px;">

                                                <tr>
                                                    <td align="left" style="padding-top: 20px;">
                                                        <table cellspacing="0" cellpadding="0" border="0" width="100%">
                                                            <tr>
                                                                <td width="75%" align="left" bgcolor="#eeeeee"
                                                                    style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 800; line-height: 24px; padding: 10px;">
                                                                    Order Confirmation # </td>
                                                                <td width="25%" align="left" bgcolor="#eeeeee"
                                                                    style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 800; line-height: 24px; padding: 10px;">
                                                                    <%= Data1.id %>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td width="75%" align="left"
                                                                    style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px; padding: 15px 10px 5px 10px;">
                                                                    SubTotal (<%= itemsCount %> items) </td>
                                                                <td width="25%" align="left"
                                                                    style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px; padding: 15px 10px 5px 10px;">
                                                                    $<%= Data1.TotalAmount %>
                                                                </td>
                                                            </tr>
                                                            <tr>
                                                                <td width="75%" align="left"
                                                                    style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px; padding: 5px 10px;">
                                                                    Discount </td>
                                                                <td width="25%" align="left"
                                                                    style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px; padding: 5px 10px;">
                                                                    $<%= Data1.DiscountedAmount %>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td align="left" style="padding-top: 20px;">
                                                        <table cellspacing="0" cellpadding="0" border="0" width="100%">
                                                            <tr>
                                                                <td width="75%" align="left"
                                                                    style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 800; line-height: 24px; padding: 10px; border-top: 3px solid #eeeeee; border-bottom: 3px solid #eeeeee;">
                                                                    TOTAL </td>
                                                                <td width="25%" align="left"
                                                                    style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 800; line-height: 24px; padding: 10px; border-top: 3px solid #eeeeee; border-bottom: 3px solid #eeeeee;">
                                                                    $<%= Data1.PurchaseTotal %>
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                    <tr>
                                        <td align="center" height="100%" valign="top" width="100%"
                                            style="padding: 0 35px 35px 35px; background-color: #ffffff;"
                                            bgcolor="#ffffff">
                                            <table align="center" border="0" cellpadding="0" cellspacing="0"
                                                width="100%" style="max-width:660px;">
                                                <tr>
                                                    <td align="center" valign="top" style="font-size:0;">
                                                        <div
                                                            style="display:inline-block; max-width:50%; min-width:240px; vertical-align:top; width:100%;">
                                                            <table align="left" border="0" cellpadding="0"
                                                                cellspacing="0" width="100%"
                                                                style="max-width:300px; margin-right: 50px;">
                                                                <tr>
                                                                    <td align="left" valign="top"
                                                                        style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px;">
                                                                        <p style="font-weight: 800;">Delivery Address
                                                                        </p>
                                                                        <p>
                                                                            <%= newAddress %>,<br>
                                                                                <%= newCity %>,<br>
                                                                                    <%= newAll %>
                                                                        </p>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </div>
                                                        <div
                                                            style="display:inline-block; max-width:50%; min-width:240px; vertical-align:top; width:100%;">
                                                            <table align="left" border="0" cellpadding="0"
                                                                cellspacing="0" width="100%" style="max-width:300px;">
                                                                <tr>
                                                                    <td align="left" valign="top"
                                                                        style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px;">
                                                                        <p style="font-weight: 800;">Order Confirmation
                                                                            Date</p>
                                                                        <p>
                                                                            <%= Data1.Date %>
                                                                        </p>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </div>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                    <div id="login-btn" style="margin-top: -10px; margin-left: 10px;">
                        <a href="/welcome" style="color: #6255a5; margin-right: 70px;">BACK TO SHOPPING</a>
                        <a href="/history" style="margin-top: 0px; color: #6255a5; margin-right: 70px;">ORDER
                            HISTORY</a>
                    </div>
                </div>

                <% } else if(Data1.Status=="failed" ) { %>

                    <div class="container-cust" id="login-form" style="margin-bottom: 0px; margin-top: -30px;">
                        <div style="margin-left: 260px; margin-top: 30px;">
                            <img src="/images/FAILED.png" style="height: 60px; width: 60px;">
                        </div>
                        <div id="login-heading" style="margin-top: -40px;">
                            <p style="color: #6255a5;">
                                <%= outofstock %> Out of Stock
                            </p>
                        </div>

                        <table border="0" cellpadding="0" cellspacing="0" width="100%" style="margin-top: -30px;">
                            <tr>
                                <td align="center" style="background-color: #eeeeee;" bgcolor="#eeeeee">
                                    <table align="center" border="0" cellpadding="0" cellspacing="0" width="100%"
                                        style="max-width:600px;">
                                        <tr>
                                            <td align="center"
                                                style="padding: 35px 35px 20px 35px; background-color: #ffffff;"
                                                bgcolor="#ffffff">
                                                <table align="center" border="0" cellpadding="0" cellspacing="0"
                                                    width="100%" style="max-width:600px;">

                                                    <tr>
                                                        <td align="left" style="padding-top: 20px;">
                                                            <table cellspacing="0" cellpadding="0" border="0"
                                                                width="100%">
                                                                <tr>
                                                                    <td width="75%" align="left" bgcolor="#eeeeee"
                                                                        style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 800; line-height: 24px; padding: 10px;">
                                                                        Order Failure # </td>
                                                                    <td width="25%" align="left" bgcolor="#eeeeee"
                                                                        style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 800; line-height: 24px; padding: 10px;">
                                                                        <%= Data1.id %>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td width="75%" align="left"
                                                                        style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px; padding: 15px 10px 5px 10px;">
                                                                        SubTotal (<%= itemsCount %> items) </td>
                                                                    <td width="25%" align="left"
                                                                        style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px; padding: 15px 10px 5px 10px;">
                                                                        $<%= Data1.TotalAmount %>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td width="75%" align="left"
                                                                        style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px; padding: 5px 10px;">
                                                                        Discount </td>
                                                                    <td width="25%" align="left"
                                                                        style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px; padding: 5px 10px;">
                                                                        $<%= Data1.DiscountedAmount %>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <td align="left" style="padding-top: 20px;">
                                                            <table cellspacing="0" cellpadding="0" border="0"
                                                                width="100%">
                                                                <tr>
                                                                    <td width="75%" align="left"
                                                                        style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 800; line-height: 24px; padding: 10px; border-top: 3px solid #eeeeee; border-bottom: 3px solid #eeeeee;">
                                                                        TOTAL </td>
                                                                    <td width="25%" align="left"
                                                                        style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 800; line-height: 24px; padding: 10px; border-top: 3px solid #eeeeee; border-bottom: 3px solid #eeeeee;">
                                                                        $<%= Data1.PurchaseTotal %>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td align="center" height="100%" valign="top" width="100%"
                                                style="padding: 0 35px 35px 35px; background-color: #ffffff;"
                                                bgcolor="#ffffff">
                                                <table align="center" border="0" cellpadding="0" cellspacing="0"
                                                    width="100%" style="max-width:660px;">
                                                    <tr>
                                                        <td align="center" valign="top" style="font-size:0;">
                                                            <div
                                                                style="display:inline-block; max-width:50%; min-width:240px; vertical-align:top; width:100%;">
                                                                <table align="left" border="0" cellpadding="0"
                                                                    cellspacing="0" width="100%"
                                                                    style="max-width:300px; margin-right: 50px;">
                                                                    <tr>
                                                                        <td align="left" valign="top"
                                                                            style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px;">
                                                                            <p style="font-weight: 800;">Delivery
                                                                                Address</p>
                                                                            <p>
                                                                                <%= newAddress %>,<br>
                                                                                    <%= newCity %>,<br>
                                                                                        <%= newAll %>
                                                                            </p>
                                                                        </td>
                                                                    </tr>
                                                                </table>
                                                            </div>
                                                            <div
                                                                style="display:inline-block; max-width:50%; min-width:240px; vertical-align:top; width:100%;">
                                                                <table align="left" border="0" cellpadding="0"
                                                                    cellspacing="0" width="100%"
                                                                    style="max-width:300px;">
                                                                    <tr>
                                                                        <td align="left" valign="top"
                                                                            style="font-family: Open Sans, Helvetica, Arial, sans-serif; font-size: 16px; font-weight: 400; line-height: 24px;">
                                                                            <p style="font-weight: 800;">Order Failure
                                                                                Date</p>
                                                                            <p>
                                                                                <%= Data1.Date %>
                                                                            </p>
                                                                        </td>
                                                                    </tr>
                                                                </table>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                </table>
                                            </td>
                                        </tr>

                                    </table>

                                </td>
                            </tr>
                        </table>
                        <div id="login-btn" style="margin-top: -10px; margin-left: 10px;">
                            <a href="/welcome" style="color: #6255a5; margin-right: 70px;">BACK TO SHOPPING</a>
                            <a href="/<%= orderId %>/payment"
                                style="margin-top: 0px; color: #6255a5; margin-right: 70px;">RETRY</a>
                        </div>
                    </div>
                    <% } %>
        </div>

    </section>

    <br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br><br>
    <%- include('./include/footer.ejs') %>

        <%- include('./include/script.link.ejs') %>

</body>