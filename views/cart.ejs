<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">
    <link rel="shortcut icon" href="images/favicon.ico">
    <title>Search Notes</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/responsive.css">
</head>

<body>

    <section id="nav-header" style="height: 100px;">
        <header>
            <nav class="navbar navbar-expand-md fixed-top white-nav">
                <div class="container">
                    <div class="img-logo">
                        <a href="home.html" class="navbar-brand">
                            <img src="images/logo.png" class="img-fluid" alt="">
                        </a>
                    </div>

                    <button class="navbar-toggler" type="button" data-toggle="collapse"
                        data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>

                    <div class="collapse navbar-collapse" style="margin-left: auto; float: right;"
                        id="navbarSupportedContent">
                        <ul class="navbar-nav" style="margin-left: auto;">
                            <% for(let user in userDetails) { %>
                                <li class="nav-item">
                                    <a style="color: #6255a6;" class="nav-link purple-link">Welcome <%= userDetails[user].UserName %></a>
                                </li>
                                <% } %>
                                    <li class="nav-item">
                                        <a class="nav-link purple-link" href="#">WALLET(<%= walletBalance %>$)</a>
                                    </li>
                                    <li class="nav-item">
                                        <a class="nav-link purple-link" href="/cart">CART(<%= cartCount %>)</a>
                                    </li>
                                    <% for(let user in userDetails) { %>
                                        <% if(userDetails[user].Status=='pending' ) { %>
                                            <li class="nav-item">
                                                <a id="nav-btn" style="width: 150px;"
                                                    class="nav-link btn btn-login-navbar-purple white-link d-flex align-items-center"
                                                    href="<%= link %>" role="button">VERIFY EMAIL</a>
                                            </li>
                                            <% } %>
                                                <% } %>
                                                    <li class="nav-item">
                                                        <a id="nav-btn"
                                                            class="nav-link btn btn-login-navbar-purple white-link d-flex align-items-center"
                                                            href="#">LOGOUT</a>
                                                    </li>
                        </ul>
                    </div>
                </div>
            </nav>
        </header>
    </section>

    <section id="filters" style="margin-top: 30px;">
        
        <div class="container">
            <div id="filter-result-heading">
                <h3>Total <%= countProducts %> Products</h3>
            </div>

            

            <div id="filter-result">

                    <div class="row res-row">

                        <% for (let product1 in productQuantity) { %>

                        <div class="col-lg-4 col-sm-6 col-12">
                            <a href="#">
                                <div class="res-book" style="width: 100%;">
                                    <div class="row">
                                        <div class="col-xl-12" style="width: 100%;">
                                            <div class="img-book">
                                                <img src="images/Search/1.jpg" class="img-fluid">
                                            </div>
                                        </div>

                                        <div class="col-xl-12">
                                            <div class="res-book-info">
                                                <div class="res-book-info-wrapper">
                                                    <div class="res-book-title" style="display: inline-block;">
                                                        <h3 style="color: #6255a6;">
                                                            <%= productQuantity[product1].product.ProductName %>
                                                        </h3>
                                                    </div>
                                                    <div class="res-book-company" style="display: inline-block;">
                                                        <p style="font-size: 15px;">
                                                            &nbsp; by <%= productQuantity[product1].product.CompanyName %>
                                                        </p>
                                                    </div>
                                                    <div class="res-book-content">
                                                        <div style="display: inline-flex; width: 100%;">
                                                            <div class="img-icon"><img src="images/university.png"
                                                                    alt=""></div>
                                                            <p>Price : <%= productQuantity[product1].product.Price %>$
                                                            </p>
                                                        </div>
                                                        <div style="display: inline-flex; width: 100%;">
                                                            <div class="img-icon"><img src="images/pages.png" alt="">
                                                            </div>
                                                            <p>Quantity Left : <%= productQuantity[product1].product.QuantityLeft
                                                                    %>
                                                            </p>
                                                        </div>
                                                        
                                                        <div style="display: inline-flex; width: 100%;">
                                                            <div class="img-icon"><img src="images/pages.png" alt="">
                                                            </div>
                                                            
                                                            <p>Quantity : <%= productQuantity[product1].Quantity
                                                                 %>
                                                            </p>
                                                            
                                                        </div>

                                                        <div id="star-rating"
                                                            style="display: inline-flex; width: 100%;">
                                                            <img src="images/star.png" class="img-fluid" alt="">
                                                            <img src="images/star.png" class="img-fluid" alt="">
                                                            <img src="images/star.png" class="img-fluid" alt="">
                                                            <img src="images/star.png" class="img-fluid" alt="">
                                                            <img src="images/star.png" class="img-fluid" alt="">
                                                            <p>100 Reviews</p>
                                                        </div>
                                                        <div
                                                            style="display: inline-flex; width: 100%; margin-bottom: 20px;">
                                                            <a id="nav-btn" style="width: 96.5%;"
                                                                class="nav-link btn btn-login-navbar-purple white-link d-flex align-items-center"
                                                                href="#">ADD TO CART</a>
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% } %>
                    </div>
            </div>
            
    </section>

    <script src="js/jquery-3.5.1.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/script.js"></script>

</body>