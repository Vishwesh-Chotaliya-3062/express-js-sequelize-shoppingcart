<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0 ,user-scalable=no">
    <link rel="shortcut icon" href="images/favicon.ico">
    <title>Sign Up</title>
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="css/fontawesome/css/all.min.css">
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <link rel="stylesheet" href="css/style.css">
    <link rel="stylesheet" href="css/responsive.css">
</head>

<body style="background-color: #eee;">
    <section id="sign-up">

        <div id="forgot-pw-content" style="margin-top: -200px;">
            <div id="logo">
                <img src="images/logo - Copy.png" alt="" style="margin-top: 400px;">
            </div>
            <div class="container" id="forgot-pw-form" style="margin-bottom: 10px;">
                <div id="forgot-pw-heading" style="margin-top: -20px;">
                    <p>Create an Account</p>
                </div>

                <% if(locals.emailCheck) { %>
                    <label for="email_error" style="color: red; margin-left: 50px; font-size: 12px;">
                        <%= emailCheck %>
                    </label>
                    <% } %>
                        <% if(typeof alert !='undefined' ) { %>
                            <label for="password_error" style="color: red; margin-left: 50px; font-size: 12px;">
                                <%= alert[0].msg %>
                            </label>
                            <% } %>
                                <form action="http://localhost:8080/signup" method="post" name="Form"
                                    style="margin-top: 40px;">
                                    <div class="form-group ip-text">
                                        <div class="input-auth">
                                            <label for="username" style="margin-top: -10px;">Username*</label>
                                            <input type="text" class="form-control input-field" name="UserName"
                                                id="UserName" placeholder="Enter name">
                                        </div>
                                        <% if(locals.checkUserEmpty) { %>
                                            <label for="email_error"
                                                style="color: red; margin-left: 50px; margin-bottom: -2px; font-size: 12px;">
                                                <%= checkUserEmpty %>
                                            </label>
                                            <% } %>
                                    </div>

                                    <div class="form-group ip-text">
                                        <div class="input-auth">
                                            <label for="email">Email*</label>
                                            <input type="text" class="form-control input-field" name="Email" id="Email"
                                                placeholder="Enter your email address">
                                        </div>
                                        <% if(locals.checkEmailEmpty) { %>
                                            <label for="email_error"
                                                style="color: red; margin-left: 50px; margin-bottom: -2px; font-size: 12px;">
                                                <%= checkEmailEmpty %>
                                            </label>
                                            <% } %>
                                    </div>

                                    <div class="form-group ip-text">
                                        <div class="input-auth">
                                            <label for="password">Password*</label>
                                            <input type="password" class="form-control input-field" name="Password"
                                                id="Password" placeholder="Enter your password"
                                                style="background: url(images/eye.png) no-repeat scroll 440px 17px; background-color: white; padding-left:10px;">
                                        </div>
                                        <% if(locals.checkPassEmpty) { %>
                                            <label for="email_error"
                                                style="color: red; margin-left: 50px; margin-bottom: -2px; font-size: 12px;">
                                                <%= checkPassEmpty %>
                                            </label>
                                            <% } %>
                                    </div>

                                    <div class="form-group ip-text">
                                        <div class="input-auth">
                                            <label for="status">Status (Activate Email to get $500)</label>
                                            <input type="text" class="form-control input-field" name="Status"
                                                id="Status" readonly>
                                        </div>
                                    </div>

                                    <div id="login-btn" style="margin-bottom: 40px; margin-top: 30px;">
                                        <button type="submit" class="btn btn-login" id="submit" value="Sign Up"
                                            data-toggle="modal">SIGN
                                            UP</button>
                                    </div>

                                </form>
            </div>
        </div>

    </section>

    <!-- <script type="text/javascript">
        function validateForm() {
          alert("You are successfully registered. Please Login to continue.")
        }
    </script> -->

    <script type="text/javascript">
        document.getElementById('Status').value = 'pending';
    </script>

    <script src="js/jquery-3.5.1.js"></script>
    <script src="js/popper.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/script.js"></script>
</body>

</html>