<body>

  <section id="login">
    <img src="images/pre-login/banner-with-overlay.jpg" id="login-bg-img" alt="">

    <div id="login-content" style="margin-top: -80px;">
      <% for(let user in userDetails) { %>
        <form action="http://localhost:8080/verify/<%= userDetails[user].UserID %>" method="GET">
          <% } %>
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" onclick="location.href = 'http://localhost:8080/login';"
                    data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true" style="font-size: 30px;">&times;</span>
                  </button>
                </div>
                <div class="modal-body" style="text-align: center;">
                  <div class="modal-img">
                    <img src="images/SUCCESS.png" alt="">
                  </div>
                  <div class="modal-main-heading">
                    <% for(let user in userDetails) { %>
                      <h2>Welcome to My Project <%= userDetails[user].UserName %>!</h2>
                      <% } %>
                  </div>
                  <div class="modal-main-text">
                    <% for(let user in userDetails) { %>
                      <h3>Your are our <%= userDetails[user].UserID %>th user.</h3>
                      <br>
                      <p>You activation is <%= userDetails[user].Status %> right now.</p>
                      <% } %>
                        <p style="margin-bottom: 0;">Have a good day.</p>
                  </div>
                </div>
                <% for(let user in userDetails) { %>
                  <% if(userDetails[user].Status=='pending' ) { %>
                    <div id="login-btn" style="margin-bottom: 40px;">
                      <button type="submit" class="btn btn-login" id="submit" value="Sign Up" data-toggle="modal"
                        style="width: 200px;">Verify Email</button>
                    </div>
                    <% } %>
                      <% } %>
              </div>
            </div>
        </form>
    </div>

  </section>

  <script src="js/jquery-3.5.1.js"></script>
  <script src="js/popper.min.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/script.js"></script>
</body>
