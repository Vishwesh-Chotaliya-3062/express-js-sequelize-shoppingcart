                          <td class="align-middle text-right">
                            <% for (u1 in Data2[u].orderdetails) { %>
                              <p style="display: table-row-group;">$<%= Data2[u].orderdetails[u1].product.Price %>
                              </p>
                              <% } %>
                          </td>
                          <td class="align-middle text-right">
                            <% for (u1 in Data2[u].orderdetails) { %>
                              <p style="display: table-row-group;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%=
                                  Data2[u].orderdetails[u1].Quantity %>
                              </p>
                              <% } %>
                          </td>
