                                    <% } %>
                                </td>
                                <td class="align-middle text-right">
                                  <% for (u1 in Data1[u].orderdetails) { %>
                                    <p style="display: table-row-group;">$<%= Data1[u].orderdetails[u1].product.Price %>
                                    </p>
                                    <% } %>
