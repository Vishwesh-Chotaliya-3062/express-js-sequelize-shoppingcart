            <div id="filter-result-heading">
              <h3 style="text-align: center; font-size: 35px;">Total <%= getOrder %> Orders.</h3>
            </div>
            <% if(!Data2.length) { %>
              <div id="filter-result-heading">
                <h3>No Pending Orders</h3>
              </div>
              <% } else { %>

                <div id="filter-result-heading">
                  <h3>Pending Orders</h3>
                </div>
                <div class="col-12 col-sm-12 col-md-12 grid-table table-responsive-xl">
                  <table class="table" style="border: 1px solid #6255a5;">
                    <thead>
                      <tr>
                        <th scope="col" class="align-middle text-center">Order<br>ID</th>
                        <th scope="col" class="align-middle text-center">DATE</th>
                        <th scope="col" class="align-middle text-center">Details</th>
                        <th scope="col" class="align-middle text-center">Price</th>
                        <th scope="col" class="align-middle text-center">Quantity</th>
                        <th scope="col" class="align-middle text-center">SubTotal</th>
                        <th scope="col" class="align-middle text-center">Discount</th>
                        <th scope="col" class="align-middle text-center">PurchaseTotal</th>
                        <th scope="col" class="align-middle text-center">Status</th>
                        <th scope="col" class="align-middle text-center">Remark</th>
                      </tr>
                    </thead>
