              <li class="nav-item">
                <a class="nav-link purple-link" href="/welcome">HOME</a>
              </li>

              <li class="nav-item">
                <a class="nav-link purple-link" href="wallet">WALLET( $<b style="color: #6255a6;">
                    <%= walletBalance %>
                  </b>)</a>
              </li>

