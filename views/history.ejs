                          </td>
                          <td class="align-middle text-center" style="max-width: 85px;">
                            <%= Data2[u].Date.getDate()+'/'+(Data2[u].Date.getMonth()+1)+'/'+Data2[u].Date.getFullYear()
                              %>
                          </td>
                          <td class="align-middle" style="min-width: 220px;">
                            <% for (u1 in Data2[u].orderdetails) { %>
                              <p style="display: table-row-group;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%=
                                  Data2[u].orderdetails[u1].product.ProductName %> by <%=
                                    Data2[u].orderdetails[u1].product.CompanyName %>
                              </p>
                              <% } %>
